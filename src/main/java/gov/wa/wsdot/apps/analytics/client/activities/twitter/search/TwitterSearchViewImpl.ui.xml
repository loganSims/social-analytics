<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
             xmlns:core.nav="urn:import:gov.wa.wsdot.apps.analytics.client.activities.coreViews.navigation">

    <ui:with field="res" type="gov.wa.wsdot.apps.analytics.client.resources.Resources" />

    <g:HTMLPanel>
        <core.nav:NavView ui:field="nav"/>
            <div style="padding: 30px;">

                <m:MaterialRow>
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s4 m2">
                            <m:MaterialListBox ui:field="searchAccountPicker">
                                <m.html:Option text="All"/>
                                <m.html:Option text="BerthaDigsSR99"/>
                                <m.html:Option text="GoodToGoWSDOT"/>
                                <m.html:Option text="SnoqualmiePass"/>
                                <m.html:Option text="wsdot"/>
                                <m.html:Option text="wsdot_520"/>
                                <m.html:Option text="WSDOT_East"/>
                                <m.html:Option text="wsdot_north"/>
                                <m.html:Option text="wsdot_sw"/>
                                <m.html:Option text="wsdot_tacoma"/>
                                <m.html:Option text="wsdot_traffic"/>
                                <m.html:Option text="wsferries"/>
                            </m:MaterialListBox>
                        </m:MaterialColumn>

                        <m:MaterialColumn grid="s3 m2">
                            <m:MaterialListBox ui:field="searchTypePicker">
                                <m.html:Option text="Tweets" value="1"/>
                                <m.html:Option text="Mentions" value="2"/>
                            </m:MaterialListBox>
                        </m:MaterialColumn>

                        <m:MaterialColumn grid="s6 m3">
                            <m:MaterialDatePicker ui:field="searchdpStart"  placeholder="Start Date (optional)"/>
                        </m:MaterialColumn>

                        <m:MaterialColumn grid="s6 m3">
                            <m:MaterialDatePicker ui:field="searchdpEnd" placeholder="End Date (optional)"/>
                        </m:MaterialColumn>

                        <m:MaterialColumn grid="s3 m2" paddingTop="30" paddingLeft="30">
                            <m:MaterialCheckBox ui:field="mediaOnly"  text="Content with media only" value="false" type="FILLED"/>
                        </m:MaterialColumn>

                    </m:MaterialRow>

                    <m:MaterialRow>
                        <m:MaterialColumn grid="s12">
                            <m:MaterialTextBox ui:field="searchTextBox" placeholder="Search Term (optional)" />
                        </m:MaterialColumn>
                    </m:MaterialRow>
                    <m:MaterialRow>
                        <m:MaterialColumn paddingRight="25">
                            <m:MaterialButton ui:field="searchBtn" text="Search"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn>
                            <m:MaterialButton ui:field="clearSearchBtn" text="Clear"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn float="RIGHT">
                            <m:MaterialLink ui:field="exportLink" text="download search results as CSV" float="LEFT" visible="false"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>

                </m:MaterialRow>



                <m:MaterialRow >
                <m:MaterialColumn grid="s4">
                    <g:HTMLPanel ui:field="searchList">
                        <g:HTMLPanel ui:field="searchDetails"/>
                    </g:HTMLPanel>
                    <m:MaterialButton ui:field="moreSearchBtn" text="more" waves="LIGHT" backgroundColor="teal lighten-2" textColor="white" visible="false"/>
                    <m:MaterialButton ui:field="backToSearchTopBtn" text="back to top" waves="LIGHT" float="RIGHT" backgroundColor="teal lighten-2" textColor="white" visible="false"/>
                    <m:MaterialPreLoader ui:field="searchLoader" size="BIG" addStyleNames="{res.css.loader}" visible="false">
                        <m:MaterialSpinner color="blue-only"/>
                    </m:MaterialPreLoader>
                </m:MaterialColumn>
                </m:MaterialRow>

            </div>
    </g:HTMLPanel>
</ui:UiBinder>